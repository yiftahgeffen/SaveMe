<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionbarCustomStyle" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:titleTextStyle">@style/TextAppearanceToolbarTitle</item>-->
        <!--<item name="preferenceTheme">@style/CustomPreferenceFragment</item>-->
        <item name="android:actionBarStyle">@style/ActionbarCustomStyle</item>
        <item name="titleTextColor">@color/wtc01</item>
        <item name="subtitleTextColor">@color/wtc01</item>
        <item name="colorControlNormal">@color/wpc02</item>
        <item name="colorControlActivated">@color/wpc02</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="textColorError">@color/wwc01</item>-->
        <item name="android:textColorLink">@color/wic02</item>
    </style>

    <style name="SettingsTheme" parent="@style/ActionbarCustomStyle">
        <item name="android:textColor">@color/wtc01</item>
    </style>

    <style name="CustomPreferenceFragment">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="GeneralThemeLightNoTitleBar" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WorldMateThemeDialog" parent="@android:style/Theme.Dialog"></style>

    <style name="WorldMateThemeDialogAppCompat" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WorldMateThemeAlertDialogCommonAppCompat" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarColoredIcons" parent="ActionbarCustomStyle" />

    <style name="TransparentActionBar" parent="CustomActionbar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarDivider">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomActionbar" parent="@style/ActionbarCustomStyle">
        <item name="titleTextColor">@color/wtc01</item>
        <item name="subtitleTextColor">@color/wtc01</item>
        <item name="colorControlNormal">@color/wtc01</item>
        <item name="colorControlActivated">@color/wtc01</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <!-- include other attributes you want to change: textColor, textStyle, etc -->
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>